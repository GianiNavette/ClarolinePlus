{
    "manifest_version": 3,
    "name": "Claroline+",
    "version": "1.0.1",
    "description": "Claroline+ permet de rendre Claroline encore plus utile ! Dark mode, sauvegarde, tourner pdf et + encore !",
    "permissions": [
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.clarolineconnect.univ-lyon1.fr/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "claro.css"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "darkModes.css"
            ],
            "matches": [
                "*://*.clarolineconnect.univ-lyon1.fr/*"
            ]
        }
    ],
    "icons": {
        "128": "logo.png"
    },
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "128": "logo.png"
        }
    }
}